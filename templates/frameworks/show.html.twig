                                                                {% else %}
                                                                    <p>
                                                                        <a href="{{ path('frameworks_lot_suppliers', {'rmNumber': framework.content.rm_number, 'lotNumber': lot.lot_number }) }}">{{ lot.suppliers|length }}
                                                                            suppliers</a>
                                                                    </p>
                                                                {% endif %}
                                                            {% endif %}
                                                        {% endif %}

