{% extends 'base.html.twig' %}

{% block title %}Thank you for signing up - CCS {% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}

    <!-- required wrapper 1 -->
    <div class="govuk-width-container">

        <!-- If your design requires them, you should place components such as breadcrumbs, back link and phase banner inside this wrapper so that they sit directly underneath the header. -->

        <div class="govuk-phase-banner">
            {% include '/includes/phase-banner-content.html.twig' %}
        </div>

        <!-- required wrapper 2 -->
        <main id="main-content" role="main" class="govuk-main-wrapper">


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    <h1 class="govuk-heading-xl page-title">Thank you for signing up</h1>

                    <p>Thank you for signing up to receive our monthly newsletters, and other emails that might interest you.</p>

                    <p>You can opt out at any time by emailing <a href="mailto:info@crowncommercial.gov.uk">info@crowncommercial.gov.uk</a> or clicking the unsubscribe link at the bottom of any marketing emails.</p>

                </div>
            </div>


        </main>
    </div>

    {% include 'forms/dataLayer_component/_form_submit.html.twig' with {'formName': "Newsletter" } %}

{% endblock %}
