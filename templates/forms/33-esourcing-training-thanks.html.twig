{% extends 'base.html.twig' %}

{% block title %}Your booking application has been sent - CCS{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}

    <!-- required wrapper 1 -->
    <div class="govuk-width-container">

        <!-- If your design requires them, you should place components such as breadcrumbs, back link and phase banner inside this wrapper so that they sit directly underneath the header. -->

        <div class="govuk-phase-banner">
            {% include '/includes/phase-banner-content.html.twig' %}
        </div>


        <!-- required wrapper 2 -->
        <main id="main-content" role="main" class="govuk-main-wrapper">


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    <h1 class="govuk-heading-xl page-title">Your booking application has been sent</h1>

                    <p>Log-in details will be issued in a meeting invitation sent to you about one week before the training date. If you don't receive the invite then
                        <a href="/contact">contact us</a>.</p>


                </div>
            </div>


        </main>
    </div>

    {% include 'forms/dataLayer_component/_form_submit.html.twig' with {'formName': "eSourcing Training" } %}

{% endblock %}
