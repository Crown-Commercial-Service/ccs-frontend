{% extends 'base.html.twig' %}

{% block title %}Search agreements - CCS{% endblock %}
{% block metadescription %}This list provides a summary of the CCS agreements currently available through which government, public and third sector organisations can buy common goods and services. It includes details of when each agreement is due to expire and a web link to the full agreement information.{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}

    <!-- required wrapper 1 -->
    <div class="govuk-width-container">

        <!-- If your design requires them, you should place components such as breadcrumbs, back link and phase banner inside this wrapper so that they sit directly underneath the header. -->

        <div class="govuk-phase-banner">
            <p class="govuk-phase-banner__content">
                <strong class="govuk-tag govuk-phase-banner__content__tag ">
                    beta </strong> <span class="govuk-phase-banner__text">
      This is a new service â€“ your
      <a class="govuk-link" href="https://www.smartsurvey.co.uk/s/QWDZX/">feedback</a> will help us to improve it.
    </span>
            </p>
        </div>


        <div class="govuk-breadcrumbs">
            <ol class="govuk-breadcrumbs__list">
                <li class="govuk-breadcrumbs__list-item">
                    <a class="govuk-breadcrumbs__link" href="/">Home</a>
                </li>
                    {% if category is defined or pillar is defined %}
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/agreements">Search agreements </a>
                    </li>
                    {% if category is defined and category|trim is not empty  %}
                        <li class="govuk-breadcrumbs__list-item" aria-current="page">{{ category }}</li>
                    {% elseif pillar is defined and pillar|trim is not empty %}
                        <li class="govuk-breadcrumbs__list-item" aria-current="page">{{ pillar }}</li>
                    {% endif %}
                {% else %}
                    <li class="govuk-breadcrumbs__list-item" aria-current="page">
                        Search agreements
                    </li>
                {% endif %}
            </ol>
        </div>


        <!-- required wrapper 2 -->
        <main id="main-content" class="govuk-main-wrapper">


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    {% if category is defined and category|trim is not empty  %}
                        <h1 class="govuk-heading-xl page-title">{{ query is defined and query|trim is not empty ? "Search agreements for #{query} in #{category} category" : "Search agreements in #{category} category" }}</h1>
                    {% elseif pillar is defined and pillar|trim is not empty %}
                        <h1 class="govuk-heading-xl page-title">{{ query is defined and query|trim is not empty ? "Search agreements for #{query} in #{pillar} category" : "Search agreements in #{pillar} category" }}</h1>
                    {% elseif query is defined and query|trim is not empty %}
                        <h1 class="govuk-heading-xl page-title">Search agreements for {{ query }}</h1>
                    {% else %}
                        <h1 class="govuk-heading-xl page-title">Search agreements</h1>
                    {% endif %}

                </div>
            </div>


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">

                    <form action="{{ path('frameworks_search') }}" method="GET">

                        <div class="govuk-form-group govuk-form-group--enclosure">
                            <div class="govuk-form-group sidebar__search-group">
                                <label class="govuk-label" for="q"> Search
                                    agreements </label>
                                {% if query is defined and query|trim is not empty %}
                                    <input class="govuk-input" id="q" name="q" type="text" value="{{ query }}">
                                {% else %}
                                    <input class="govuk-input" id="q" name="q" type="text">
                                {% endif %}
                                {% if category is defined and category|trim is not empty  %}
                                    <input type="hidden" name="category" value={{ category_slug }}>
                                {% endif %}
                                {% if pillar is defined and pillar|trim is not empty %}
                                    <input type="hidden" name="pillar" value={{ pillar_slug }}>
                                {% endif %}
                                <button type="submit" class="sidebar__search-button govuk-input">
                                    <span class="visuallyhidden">Search agreements</span>
                                </button>
                            </div>
                        </div>


                        <div class="govuk-grid-row">
                            <div class="govuk-grid-column-one-half">
                               <h2 class="govuk-heading-m">Apply filters</h2>
                            </div>
                             <div class="govuk-grid-column-one-half" style="text-align:right;">
                                {% set clearText = 'Clear filters' %}

                                {% if query is defined %}
                                
                                    {% if pillar is defined and pillar|trim is not empty %}
                                        <a href="{{"/agreements/search?q=#{query}&pillar=#{pillar_slug}"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% elseif category is defined and category|trim is not empty %}
                                        <a href="{{"/agreements/search?q=#{query}&category=#{category_slug}"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% else %}
                                        <a href="{{"search?q=#{query}"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% endif %}

                                {% else %} 

                                    {% if pillar is defined and pillar|trim is not empty %}
                                        <a href="{{"/agreements/pillar/#{pillar_slug}"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% elseif category is defined and category|trim is not empty %}
                                        <a href="{{"/agreements/category/#{category_slug}"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% else %}
                                        <a href="{{"/agreements"}}" class="govuk-link" >{{ clearText }}</a>
                                    {% endif %}
                                    
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="govuk-accordion ccs-accordion ccs-accordion--clean" data-module="accordion" id="accordion-with-summary-sections">
                            <div class="govuk-accordion__section ccs-accordion__section--clean govuk-form-group govuk-form-group--enclosure ccs-form-group--enclosure--tight govuk-accordion__section--expanded">
                                <div class="govuk-accordion__section-header">
                                    <h2 class="govuk-accordion__section-heading">
                                        <span class="govuk-accordion__section-button ccs-accordion__section-button" id="accordion-with-summary-sections-heading-3">
                                            Filter by agreement status
                                        </span>
                                    </h2>
                                    <span class="govuk-body-s">{{ statuses is not defined or statuses is empty ? 1 : statuses|length }} selected</span>
                                </div>
                               
                                <div id="accordion-with-summary-sections-content-3" class="govuk-accordion__section-content" aria-labelledby="accordion-with-summary-sections-heading-3">
                                        <div class="govuk-checkboxes__item govuk-checkboxes__item--small">
                                            
                                            {% if statuses is defined and 'all' in statuses %}
                                            {# checked #}
                                                <input onChange="this.form.submit()" class="govuk-checkboxes__input govuk-checkboxes__input--small" id="all" name="" type="checkbox" checked >
                                            {% else %}
                                            {# unchecked #}
                                                <input onChange="this.form.submit()" class="govuk-checkboxes__input govuk-checkboxes__input--small" id="all" name="statuses[]" type="checkbox" value="all" >
                                            {% endif %}
                                            <label class="govuk-label govuk-checkboxes__label" for="all">
                                                View all
                                            </label>
                                        </div>

                                         <div class="govuk-checkboxes__item govuk-checkboxes__item--small">
                                            <input onChange="this.form.submit()" class="govuk-checkboxes__input govuk-checkboxes__input--small" id="live"name="statuses[]" type="checkbox" value="live" {{ statuses is not defined or statuses is empty or 'live' in statuses ? "checked" : "" }} >
                                            <label class="govuk-label govuk-checkboxes__label" for="live">
                                                Live
                                            </label>
                                        </div>

                                         <div class="govuk-checkboxes__item govuk-checkboxes__item--small">

                                            <input onChange="this.form.submit()" class="govuk-checkboxes__input govuk-checkboxes__input--small" id="upcoming" name="statuses[]" type="checkbox" value="upcoming" {{ statuses is defined and 'upcoming' in statuses ? "checked" : "" }} >
                                            <label class="govuk-label govuk-checkboxes__label" for="upcoming">
                                                Upcoming
                                            </label>
                                        </div>

                                         <div class="govuk-checkboxes__item govuk-checkboxes__item--small">

                                            <input onChange="this.form.submit()" class="govuk-checkboxes__input govuk-checkboxes__input--small" id="expired" name="statuses[]" type="checkbox" value="expired" {{ statuses is defined and 'expired' in statuses ? "checked" : "" }} >
                                            <label class="govuk-label govuk-checkboxes__label" for="expired">
                                                Expired
                                            </label>
                                        </div>
                                </div>
                            </div>
                        </div>
                        
                        {# see https://studio24.github.io/frontend/templating/content-fields.html #}
                        <h2 class="govuk-heading-m">Browse by category</h2>
                        <ul class="govuk-list">

                            {% for pillar_item in pillars.pillars %}
                                <li>
                                    {% if pillar is defined and pillar == pillar_item.name %}
                                        <a class="govuk-!-font-weight-bold" href="{{ path('frameworks_list_by_pillar', {'pillar': pillar_item.slug}) }}">{{ pillar_item.name }}</a>
                                    {% else %}
                                        <a href="{{ path('frameworks_list_by_pillar', {'pillar': pillar_item.slug}) }}">{{ pillar_item.name }}</a>
                                    {% endif %}


                                    <ul class="govuk-list">
                                        {% for category_item in pillar_item.categories %}
                                            <li>
                                                {% if category is defined and category == category_item.name %}
                                                    <a class="govuk-!-font-weight-bold" href="{{ path('frameworks_list_by_category', {'category': category_item.slug}) }}">{{ category_item.name }}</a>
                                                {% else %}
                                                    <a href="{{ path('frameworks_list_by_category', {'category': category_item.slug}) }}">{{ category_item.name }}</a>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>

                                </li>
                            {% endfor %}
                        </ul>

                    </form>

                </div>

                 <div class="govuk-grid-column-two-thirds">
                        {% if pagination.totalResults == 1 %}
                            <h2 class="govuk-heading-m ccs-font-weight-semibold govuk-!-font-size-24">{{ pagination.totalResults }} agreement found</h2>
                        {% else %}
                            <h2 class="govuk-heading-m ccs-font-weight-semibold govuk-!-font-size-24">{{ pagination.totalResults }} agreements found</h2>
                        {% endif %}
                 </div>

                {% if statuses is not defined or 'all' not in statuses %}

                    {% set statusLive = '&statuses%5B%5D=live' %}
                    {% set statusExpired = '&statuses%5B%5D=expired' %}
                    {% set statusUpcoming = '&statuses%5B%5D=upcoming' %}

                    <div class="govuk-grid-column-two-thirds">
                        <div class="ccs-filters-summary ccs-filter-summary-frameworks">
                            <div class="ccs-filters-summary__facets" style="display: block; margin-top:0">
                                <span class="ccs-filters-summary__label">Matching</span>
                                <ul class="ccs-filters-summary__list">

                                    {% if statuses is not defined or statuses is empty or 'live' in statuses %}
                                        <li class="ccs-filters-summary__facet">
                                            <a href="{{ "/agreements/search?q=#{ query is defined and query|trim is not empty ? query : '' }#{ statuses is defined and 'expired' in statuses ? statusExpired : '' }#{ statuses is defined and 'upcoming' in statuses ? statusUpcoming : '' }" }}" class="ccs-filters-summary__facet__cancel"> 
                                                <span> Live </span>
                                            </a>  
                                        </li>
                                    {% endif %}

                                    {% if statuses is defined %}
                                        {% if 'live' in statuses and ('upcoming' in statuses or 'expired' in statuses) %}
                                            <div style="display: inline; padding-right: 5px;" >and</div>
                                        {% endif %}

                                        {% if 'upcoming' in statuses %}
                                        <li class="ccs-filters-summary__facet">
                                            <a href="{{ "/agreements/search?q=#{ query is defined and query|trim is not empty ? query : '' }#{'expired' in statuses ? statusExpired : '' }#{'live' in statuses ? statusLive : '' }" }}" class="ccs-filters-summary__facet__cancel"> 
                                                <span> Upcoming deal </span>
                                            </a>  
                                        </li>
                                        {% endif %}

                                        {% if 'upcoming' in statuses and 'expired' in statuses %}
                                            <div style="display: inline; padding-right: 5px;" >and</div>
                                        {% endif %}

                                        {% if 'expired' in statuses %}
                                            <li class="ccs-filters-summary__facet">
                                                <a href="{{ "/agreements/search?q=#{ query is defined and query|trim is not empty ? query : '' }#{'upcoming' in statuses ? statusUpcoming : '' }#{'live' in statuses ? statusLive : '' }" }}" class="ccs-filters-summary__facet__cancel"> 
                                                    <span> Expired deal </span>
                                                </a>  
                                            </li>
                                        {% endif %}
                                    {% endif %}

                                </ul>
                            </div>
                        </div>
                    </div>
                {% endif %}
                

                {% if query is defined and query|trim is not empty %}
                    <div class="govuk-grid-column-two-thirds">
                        <div class="ccs-filters-summary ccs-filter-summary-frameworks">
                            <div class="ccs-filters-summary__facets" style="display: block; margin-top:0">
                                <span class="ccs-filters-summary__label">Containing</span>
                                <ul class="ccs-filters-summary__list">
                                    <li class="ccs-filters-summary__facet">
                                        {% if category is defined and category|trim is not empty %}
                                            <a href="{{"/agreements/category/#{category_slug}"}}" class="ccs-filters-summary__facet__cancel">
                                                <span>{{ query }}</span>
                                            </a>
                                        {% elseif pillar is defined and pillar|trim is not empty %}
                                            <a href="{{"/agreements/pillar/#{pillar_slug}"}}" class="ccs-filters-summary__facet__cancel">
                                                <span>{{ query }}</span>
                                            </a>
                                        {% else %}
                                            <a href="/agreements" class="ccs-filters-summary__facet__cancel">
                                                <span>{{ query }}</span>
                                            </a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="govuk-grid-column-two-thirds guided-match-background govuk-!-margin-bottom-2 guided-match-area">
                            <label class="govuk-heading-l ccs-font-weight-semibold govuk-!-margin-top-1 govuk-!-margin-bottom-1 text-white">Get help finding the right agreement</label>
                            <label class="govuk-body text-white">Answer some simple questions to find the best agreement for your needs</br></label>
                        <a href={{ match_url }} role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-3 govuk-!-margin-bottom-3" data-module="govuk-button">
                            Start now
                            <svg class="govuk-!-padding-left-2" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                            </svg>
                        </a>
                    </div>
                {% endif %}

                <div class="govuk-grid-column-two-thirds">
                    {# see https://studio24.github.io/frontend/templating/content-fields.html #}

                    <ul class="govuk-list govuk-list--frameworks">
                        {% for item in results %}
                            <li>
                                <h3 class="govuk-heading-m ccs-heading-link ccs-heading-link--inline govuk-!-margin-bottom-2 ccs-font-weight-semibold govuk-!-font-size-22">
                                    <a href="{{ path('frameworks_show', {'rmNumber':  item.content.rm_number }) }}">{{ item.content.title }}</a> {# <strong class="govuk-tag govuk-tag--subtle">{{ item.content.status }}</strong> #}
                                    {% if item.content.status == 'Expired - Data Still Received' %}
                                        <span class="govuk-tag ccs-tag ccs-tag--error">Expired: {{ item.content.end_date.format('d/m/Y') }}</span>
                                    {% elseif item.content.status == 'Future (Pipeline)'%}
                                        <span class="govuk-tag govuk-tag--subtle">FUTURE</span>
                                    {% elseif item.content.status == 'Planned (Pipeline)'%}
                                        <span class="govuk-tag govuk-tag--subtle">PLANNED</span>
                                    {% elseif item.content.status == 'Underway (Pipeline)'%}
                                        <span class="govuk-tag govuk-tag--subtle">UNDERWAY</span>
                                    {% elseif item.content.status == 'Awarded (Pipeline)'%}
                                        <span class="govuk-tag govuk-tag--subtle">AWARDED</span>
                                    {% endif %}
                                </h3>
                                <ul class="list--inline govuk-body-s govuk-!-margin-bottom-2">
                                    <li><strong>Agreement
                                            ID:</strong> {{ item.content.rm_number }}
                                    </li>
                                    <li><strong>Start
                                            Date:</strong> {{ item.content.start_date.format('d/m/Y') }}
                                    </li>
                                    {% if item.content.status != 'Expired - Data Still Received' %}
                                        <li><strong>End
                                                Date:</strong> {{ item.content.end_date.format('d/m/Y') }}
                                        </li>
                                    {% endif %}
                                </ul>
                                <p class="govuk-body-s">{{ item.content.summary | striptags | raw }}</p>
                            </li>
                        {% endfor %}
                    </ul>


                    {# Pagination #}
                    {% if pillar is defined and pillar|trim is not empty %}
                        {%  set pagination_data = {'pagination': pagination, 'route': 'frameworks_list_by_pillar', 'options': {'pillar': pillar_slug}} %}
                    {% elseif category is defined and category|trim is not empty %}
                        {%  set pagination_data = {'pagination': pagination, 'route': 'frameworks_list_by_category', 'options': {'category': category_slug}} %}
                    {% elseif query is defined and query|trim is not empty %}
                        {%  set pagination_data = {'pagination': pagination, 'route': 'frameworks_search', 'options': {'q': query}} %}
                    {% else %}
                        {%  set pagination_data = {'pagination': pagination, 'route': 'frameworks_list', 'options': {}} %}
                    {% endif %}

                    {% if pagination.totalPages > 1 %}
                        {{ include('includes/pagination.html.twig', pagination_data) }}
                    {% endif %}

                </div>
            </div>


        </main>
    </div>

{% endblock %}
