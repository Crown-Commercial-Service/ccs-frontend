{
  "name": "crown-commercial-services",
  "version": "1.0.0",
  "description": "npm scripts for building and watching the Crown Commercial Services site",
  "scripts": {
    "css:mainsass:compressed": "node-sass --output-style=compressed --source-map=true assets/styles/styles.scss public/assets/styles/styles.min.css",
    "css:mainsass:uncompressed": "node-sass assets/styles/styles.scss public/assets/styles/styles.css",
    "css:sass": "npm-run-all --parallel css:mainsass:*",
    "css:autoprefixer": "npx postcss public/assets/styles/*.css --use autoprefixer -d public/assets/styles",
    "css": "npm-run-all --sequential css:sass css:autoprefixer",
    "images:imagemin": "imagemin assets/images/* --out-dir=public/assets/images",
    "images:svg": "svgo --folder=assets/svg --output=public/assets/svg",
    "images": "npm-run-all --parallel images:imagemin images:svg",
    "fonts": "shx cp -r assets/fonts/* public/assets/fonts",
    "js:copygovuk-frontend": "shx cp -r node_modules/govuk-frontend/govuk/all.js public/assets/scripts/all.js",
    "js:minifygovuk-frontend": "./node_modules/.bin/babel ./node_modules/govuk-frontend/govuk/all.js --out-file public/assets/scripts/all.min.js --presets=@babel/preset-env --minified",
    "js:copyvuejs": "shx cp -r node_modules/vue/dist/vue.js public/assets/scripts/libraries/vue.js",
    "js:copyvuejsprod": "shx cp -r node_modules/vue/dist/vue.min.js public/assets/scripts/libraries/vue.min.js",
    "js:copylibraries": "shx cp -r assets/scripts/libraries/* public/assets/scripts/libraries/",
    "js:copydataLayerjs": "shx cp -r assets/scripts/dataLayer.js public/assets/scripts/dataLayer.js",
    "jsmain:babel:transpile": "./node_modules/.bin/babel assets/scripts --out-dir public/assets/scripts --presets=@babel/preset-env --minified",
    "js": "npm-run-all --parallel js:copylibraries jsmain:babel:transpile js:copygovuk-frontend js:minifygovuk-frontend js:copyvuejs js:copyvuejsprod",
    "build": "npm-run-all --parallel css images fonts js",
    "prebuild": "shx rm -rf public/assets && shx mkdir -p public/assets/fonts && shx mkdir public/assets/images && shx mkdir public/assets/scripts && shx mkdir public/assets/scripts/libraries && shx mkdir public/assets/styles && shx mkdir public/assets/svg",
    "watch:css": "watch 'npm run css' assets/styles --interval=1",
    "watch:images:svg": "watch 'npm run images:svg' assets/svg --interval=1",
    "watch:images:imagemin": "watch 'npm run images:imagemin' assets/images --interval=1",
    "watch:fonts": "watch 'npm run fonts' assets/fonts --interval=1",
    "watch:js:copylibraries": "watch 'npm run js:copylibraries' assets/scripts/libraries --interval=1",
    "watch:js": "watch 'npm run js:copydataLayerjs' assets/scripts/ --interval=1",
    "watch": "npm-run-all --parallel watch:* watch:*:*"
  },
  "author": "Studio 24",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "autoprefixer-cli": "^1.0.0",
    "babel-preset-vue": "^2.0.2",
    "bl": "^2.2.1",
    "braces": "^2.3.2",
    "decompress": "^4.2.1",
    "govuk-frontend": "^4.7.0",
    "imagemin-cli": "^7.0.0",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.21",
    "lodash.template": "^4.5.0",
    "minimist": "^1.2.8",
    "node": "^14.20.1",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "shx": "^0.3.4",
    "svgo": "2.8.0",
    "tunnel-agent": "^0.6.0",
    "vue": "^2.7.14",
    "watch": "^1.0.2",
    "whatwg-fetch": "^3.6.19",
    "yargs-parser": "^13.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^8.3.1",
    "zombie": "^6.1.4"
  }
}
