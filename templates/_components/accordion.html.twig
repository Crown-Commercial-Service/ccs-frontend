<div class="govuk-width-container">
    <div class="resources-section">

        {% if component.accordion_accordion_heading is defined and component.accordion_accordion_heading|length > 0  %}
            <h2 class="govuk-heading-m resources-section__heading">{{ component.accordion_accordion_heading }}</h2>
        {% endif %}
        {% if component.accordion_accordion_introduction %}
            <div class="resources-section__intro">{{ component.accordion_accordion_introduction|raw }}</div>
        {% endif %}

        <div class="govuk-accordion govuk-!-margin-top-4" data-module="govuk-accordion" id="accordion-default">

            {% for accordion_item in component.accordion_accordion_items %}
                <div class="{{ component.accordion_accordion_open_all_by_defult.value ? 'govuk-accordion__section--expanded' : 'govuk-accordion__section' }}">
                    <div class="govuk-accordion__section-header">
                        <h2 class="govuk-accordion__section-heading">
                    <span class="govuk-accordion__section-button" id="accordion-default-heading-{{ loop.index }}">
                      {{ accordion_item.items_title }}
                    </span>
                        </h2>
                    </div>
                    <div id="accordion-default-content-{{ loop.index }}" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-{{ loop.index }}">

                        <div class="wysiwyg-content">

                            {{ accordion_item.items_content | raw }}

                        </div>

                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</div>
