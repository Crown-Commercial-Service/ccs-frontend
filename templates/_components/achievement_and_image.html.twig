<div class="govuk-width-container">
    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter govuk-!-width-one-quarter" style="position: relative; height: 200px;">
                {% if component.achievement_and_image_achievement_and_image_image %}
                    <figure class="image-wrapper">
                        <picture class="">
                            <source component="(max-width: 768px)" srcset="{{ component.achievement_and_image_achievement_and_image_image.byName('medium_large') }}">
                            <source component="(min-width: 1024px)" srcset="{{ component.achievement_and_image_achievement_and_image_image.byName('large') }}">
                            <source component="(min-width: 1920px)" srcset="{{ component.achievement_and_image_achievement_and_image_image.byName('full') }}">
                            {# Fallback for browsers that don't support the picture element #}
                            <img src="{{ component.achievement_and_image_achievement_and_image_image }}"
                                    role="presentation"
                                    class=""
                                    style="border-radius:50%; position: relative; width: 250px; height: 250px; overflow: hidden; object-fit: cover;"
                                    loading="lazy"/>
                        </picture>
                    </figure>
                {% endif %}
            </div>
            <div class="govuk-grid-column-three-quarters govuk-!-padding-left-1 govuk-!-padding-top-9" style="margin-left: 5%; max-width: 600px;">
                <div style="border-left-style: solid; border-color: var(--sub-color); border-width: 4px;">
                    <div class="govuk-!-font-size-25 govuk-heading-m govuk-!-padding-left-3">
                    {{ component.achievement_and_image_achievement_and_image_text | striptags | raw }}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>